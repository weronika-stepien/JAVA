/*Left Side*/

.side-form
{
	-fx-background-color: linear-gradient(from 25% 35% to 100% 100%, #193061, #458eff);
	-fx-border-color: #000;
	-fx-border-width: .4px .2px .4px .4px;
}
.side-button
{
	-fx-background-color: transparent;
	-fx-text-fill: #fff;
	-fx-font-family: Arial;
	-fx-font-size: 14 px;
	-fx-border-color: #fff;
	-fx-border-width: .5px;
	-fx-cursor: hand;
}
.side-button:hover
{
	-fx-background-color: #fff;
	-fx-text-fill: #194480;
	-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 8,0,0,0);

}

/* Right Side */

.login-form
{
	-fx-background-color:	#fff;
	-fx-border-color: #000;
	-fx-border-width: .4px .4px .4px .2px;
}

.text-field
{
	-fx-background-color: #efefef;
	-fx-font-size: 13px;
	-fx-font-family: Tahoma;
	-fx-border-color: #d7d7d7;
	-fx-border-width: .7px;
}
.text-field:focused
{
	-fx-background-color: #fff;
	-fx-border-width: .1px;
	-fx-border-color: #225dab;
}

.login-button
{
	-fx-background-color: linear-gradient(from 25% 65% to 100% 100%, #193061, #09499e);
	-fx-text-fill: #fff;
	-fx-font-family: Arial;
	-fx-font-size: 14 px;
	-fx-border-width: .5px;
	-fx-cursor: hand;
}
.login-button:hover
{
	-fx-background-color: linear-gradient(from 25% 35% to 100% 100%, #2869bf, #225dab);
	-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 8,0,0,0);

}



/* Details */

.close
{
		-fx-background-color: transparent;
		-fx-cursor: hand;
}
.close:hover
{
	-fx-background-color: #bc0e0e;
	-fx-background-radius: 40px;
	-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 8,0,0,0);
	

}
